<html>
  <head>
    <title>sudoku</title>
    <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <h1>what are this?</h1>

    <div id="sudoku">
      <form action="/" method="post">
      <% 3.times do |row| %>
        <div class="row">
          <% 3.times do |box| %>
            <div class="box">
              <% 3.times do |cell_row| %>
                <div class="cell_row">
                  <% 3.times do |cell| %>
                    <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
      <button>check answers</button>
      </form>
    </div>
    <div id="flash">
      <%= flash[:notice] %>
    </div>
  </body>
</html>